{% extends 'base.html.twig' %}

{% block title %}Prêt à jouer !{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/styles/play.css') }}" />
{% endblock %}

{% block body %}
    <div class="disp-f al-c f-d-c">
        <h1 class="f-s-title">Voici la plante à trouver</h1>

        {% for plant in plants %}
            <div id="plant-id" class="display-no">{{ plant.id}}</div>
            {% for img in plant.images %}
                <img class="b-r-5pc" src='{{ asset("assets/medias/#{img}") }}' width="275" height="175">
            {% endfor %}
            <div class="w-90pc">
                <h1 id="plant-title">{{ plant.name}}</h1>
                <p>{{ plant.description }}</p>
            </div>
        {% endfor %}
        
        <div class="relative-p">
            <video id="video" width="200" height="150" autoplay></video>
            <canvas id="canvas" class="picture-p" width="200" height="150"></canvas>
            <a class="camera-p" id="snap"><img class="image" src="{{ asset('assets/medias/camera.png') }}" width="30" height="30"></a>
        </div>
        
        <div class="disp-f gap-20px">
            <button type="submit" id="save" class="btn" onclick="window.location.href='/home/play/succes';" >Je valide</button>  
            <button type="submit" class="btn" onclick="window.location.href='/home/play';" >Je ne valide pas</button>
        </div>

        <div id="latitude" class="display-no"></div>
        <div id="longitude" class="display-no"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://raw.githubusercontent.com/exif-js/exif-js/master/exif.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('assets/js/pic.js') }}"></script>
{% endblock %}